#!/bin/bash

echo "--- Pulizia dei tentativi precedenti... ---"
rm -rf ~/rpmbuild/BUILD/*
rm -rf ~/rpmbuild/BUILDROOT/*
rm -rf ~/rpmbuild/RPMS/x86_64/*
rm -rf ~/rpmbuild/SOURCES/*
rm -rf ~/rpmbuild/SRPMS/*
echo "--- Pulizia completata. ---"

#
# Qui va il resto del tuo script di build
# (ad esempio, il comando rpmbuild)
#
echo "--- Avvia la nuova build... ---"
