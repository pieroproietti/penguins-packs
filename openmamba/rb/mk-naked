#!/bin/bash

# Script to create a naked rootfs for OpenMamba
# Usage: ./mknaked.sh
echo $SUDO_HOME
cd $SUDO_HOME
NAKED=$SUDO_HOME/naked
mkdir "/naked"
mount /dev/sda1 "$SUDO_HOME/naked"
cd $NAKED
sudo tar -xf ../openmamba-rootfs-base-en-snapshot-20250815.x86_64.tar.xz

# dnf install kernel
# depmod -a 6.12.37-1mamba-x86_64
# dracut --force /boot/initramfs-6.12.37-1mamba-x86_64.img 6.12.37-1mamba-x86_64


